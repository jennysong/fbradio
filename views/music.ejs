    <script>
      var speaker = new PostSpeaker;
      var socket = io();
      socket.emit('register', "<%= rand_token %>");
      socket.on('new_messages', function(stringified_data) {
        var posts = JSON.parse(stringified_data);

        $(posts).each(function(index, post) {
          speaker.add(post);
        })
      })


    </script>


